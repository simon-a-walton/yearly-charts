{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "app",
    "components",
    "lib",
    "context",
    "jest.setup.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
